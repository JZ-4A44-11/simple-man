{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@simple-man/database": ["packages/database/dist/client.js"]
    }
  },
  "exclude": ["**/dist", "**/build", "**/node_modules"]
}
